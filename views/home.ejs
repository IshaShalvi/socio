<h1>Socio / <%= title %></h1>
<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="40" row="5" placeholder="Type here..."></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div>
        <ul>
            <% for(post of posts){%>
                <li>
                    <p>
                        <%= post.content %>
                    <br>
                    <small>
                        <%= post.user.name%>
                    </small>
                    </p>
                    

                </li>

            <%}%>
        </ul>
    </div>

</section>     